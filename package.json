{
  "name": "reactiv",
  "version": "0.3.7",
  "description": "A react-like incremental vdom renderer",
  "repository": {
    "type": "git",
    "url": "git://github.com/twelve-monkeys/reactiv.git"
  },
  "main": "./lib/reactiv-nodejs.js",
  "typings": "./lib/reactiv.d.ts",
  "scripts": {
    "clean": "rm -r -f lib && rm -r -f test/lib",
    "lint": "tslint reactiv.ts",
    "typings": "tsc -p tsconfig.for.definitions.json && node ./node_modules/dts-bundle/lib/dts-bundle.js --name reactiv --main lib/reactiv.d.ts",
    "build": "npm run clean && npm run typings && npm run build-for-browser && npm run build-for-nodejs",
    "build-for-browser": "webpack --config webpack.for.browser.config.js",
    "build-for-nodejs": "webpack --config webpack.for.nodejs.config.js",
    "test": "npm run build && npm run test-nodejs && npm run test-browser",
    "test-nodejs": "webpack --config webpack.for.nodejs.tests.config.js && karma start karma.nodejs.conf.js --single-run",
    "test-browser": "webpack --config webpack.for.browser.tests.config.js && karma start karma.browser.conf.js --single-run",
    "test-chrome": "webpack --config webpack.for.browser.tests.config.js && karma start karma.browser.conf.js --single-run --browsers Chrome",
    "test-require": "npm run build && npm install -g . && npm ls -g && cd test && node test-require.js && cd .. && npm remove -g .",
    "publish-patch": "npm run build && npm version patch && npm publish",
    "publish-minor": "npm run build && npm version minor && npm publish"
  },
  "keywords": [
    "react",
    "jsx",
    "incremental",
    "virtual",
    "dom"
  ],
  "author": "jeremy kothe",
  "license": "ISC",
  "devDependencies": {
    "awesome-typescript-loader": "^0.15.9",
    "dts-bundle": "^0.4.3",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "typescript": "^1.8.5",
    "webpack": "^1.12.14"
  }
}
